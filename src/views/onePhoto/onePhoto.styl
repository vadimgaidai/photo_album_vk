.onePhoto
	&__inner
		width 100%
		height 100%
		max-width $maxWidth
		margin: 0 auto 0
		padding-top 5rem
	&__title
		color $mainColor
		text-align center
	&__back
		border .1rem solid $cardsBg
		background-color $cardsBg
		color $mainBg
		font-weight 400
		padding: 1rem
		border-radius: .5rem
		cursor pointer
		transition all $mainTransition ease
		&:hover 
			background-color $mainBg
			color $cardsBg
		&:active 
			transform: translateY(3px)
	&__photo 
		width 100%
		height 100%
		&--image 
			width 100%
			height 100%
			max-height 100rem
			object-fit: contain
	&__text 
		color $mainColor
		font-weight 700
		font-size 2rem	
		padding-top 1rem


