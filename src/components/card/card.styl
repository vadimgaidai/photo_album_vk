.card
	text-decoration none
	display block
	background-color $cardsBg
	border-radius 1rem
	box-shadow 0 0.4rem 3.2rem 0 rgba(0,0,0,.28)
	padding 1rem
	width 100%
	height 100%
	color $colorCards
	margin-top: 2rem
	position relative
	 z-index: 1
	transition: all $mainTransition ease
	cursor pointer
	&:hover 
		box-shadow: 0 0.4rem 3.2rem 0 rgba(0,0,0,.28)
		transform: translateY(-2px)
		.card__tooltip 
			visibility: visible
			opacity: 1
	&__album 
		display flex
		align-items center
		&--wrap 
			&:first-child 
				margin-right 3rem
		&--image
			max-width 13rem
			width 100%
			object-fit: contain
	&__photos
		display flex
		align-items center
		justify-content center
		flex-direction: column
		&--image
			width 100%
			height 100%
			object-fit: contain
	&__tooltip 
		visibility: hidden
		width: 100%
		background-color: #555
		color: #fff
		text-align: center
		padding: .5rem 0
		border-radius: .6rem
		position: absolute
		left 0
		z-index 9999
		margin-top 1.5rem
		opacity: 0
		transition: opacity 0.3s
		&:before 
			content: ""
			position: absolute
			top: -1rem
			left: 50%
			margin-left: -.5rem
			border-width: .5rem
			border-style: solid
			transform: rotate(180deg)
			border-color: #555 transparent transparent transparent